<h1> Edit This Adventure </h1>
<div class="edit-box">
<%= form_for @adventure do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title, placeholder: 'adventure title',:class => "form-control" %><br>
  <%= f.label :Author %>
  <%= f.text_field :author, placeholder: 'your name',:class => "form-control" %><br>


  <%= f.fields_for :pages, @pages do |b| %>
   <%= f.label :Story %>
    <%= b.text_area :text, placeholder: 'next story line', :class => "form-control" %><br>
    <%= f.label :Story_Position%>
     <%= b.text_field :name, placeholder: 'next page title',:class => "form-control" %><br>
  <% end %>

  <%= f.submit  class: "btn btn-primary" %>
<% end %>
</div>
<p>Back to <a href="/adventures">Shane's Adventures</a></p>